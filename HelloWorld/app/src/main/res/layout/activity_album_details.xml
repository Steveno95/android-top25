<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".AlbumDetailsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/artwork_view"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:contentDescription="Album Artwork" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Album Title"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_view"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:text="Artist" />

            <TextView
                android:id="@+id/genre_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artist_view"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:text="Genre"/>

            <TextView
                android:id="@+id/release_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/genre_view"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:text="Release Date"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/copyright_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Copyright"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>